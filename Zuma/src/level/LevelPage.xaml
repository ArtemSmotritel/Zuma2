<Page
    x:Class="Zuma.src.level.LevelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Zuma.src.level"
    xmlns:frog="clr-namespace:Zuma.src.frog"
    mc:Ignorable="d"
    d:DesignHeight="1080"
    d:DesignWidth="1920 "
    Title="LevelView">
    <DockPanel
        Background="{Binding Background}">
        <StatusBar
            DockPanel.Dock="Top"
            Background="DarkGreen"
            Opacity="0.5">
            <StatusBarItem>
                <Label
                    Name="LevelName"
                    Content="{ Binding Name }" />
            </StatusBarItem>
        </StatusBar>
        <Canvas
            x:Name="LevelCanvas">
        </Canvas>
    </DockPanel>
</Page>
